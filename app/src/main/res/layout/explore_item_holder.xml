<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:layout_margin="3dp"
    android:id="@+id/accordian_title"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_face"
        android:padding="10dp"

        >
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow"
            android:layout_marginRight="20dp"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/displayimage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/display_img"
            app:shapeAppearanceOverlay="@style/criclebroder"
            android:layout_marginLeft="10dp"

            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/call"
            android:src="@android:drawable/stat_sys_phone_call"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:text="Contact us"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="Price"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="115dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/property_title"
            android:text="Title"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="115dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_alignRight="@+id/property_title"
            android:text="Location"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="135dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/card_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accordian_body"
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="175dp">

        <TextView
            android:id="@+id/heading_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="@color/card_drop_text"
            />
        <TextView
            android:id="@+id/property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/card_drop_text"
            android:text="Description: none"
             />


    </RelativeLayout>
</androidx.cardview.widget.CardView>